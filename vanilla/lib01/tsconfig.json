{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler", // 重要
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite 会负责输出，tsc 只负责检查
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src"]
}